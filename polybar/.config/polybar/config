module-margin-right = 0

;https://github.com/jaagr/polybar/wiki/Fonts
#font-0 = "UbuntuMono Nerd Font:size=12;2"
#font-1 = "UbuntuMono Nerd Font:size=20;3"

font-0 = "Cousine Nerd Font:style=Regular:size=10"
font-2 = "Font Awesome 5 Free:style=Regular:pixelsize=8;1"
font-3 = "Font Awesome 5 Free:style=Solid:pixelsize=8;1"
font-4 = "Font Awesome 5 Brands:pixelsize=8;1"

;arrange modules here!
modules-left = i3
modules-center = xwindow
:modules-right = arrow8 spotify arrow7 memory1 arrow6 cpu1 arrow5 pavolume arrow4 wireless-network wired-network arrow3 xbacklight arrow2 battery arrow1 date powermenu
modules-right = spotify memory1 cpu1 pavolume wireless-network wired-network battery xbacklight date powermenu

separator =

tray-position = right
tray-detached = false
tray-maxsize = 20
tray-background = ${colors.background}
tray-offset-x = 0
tray-offset-y = 0
