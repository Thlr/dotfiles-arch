#!/bin/sh

#case $BLOCK_BUTTON in
#	1) setsid pavucontrol ;;
#	2) pamixer -t ;;
#	3) notify-send "volume" ;;
#	4) pamixer -i 1 ;;
#	5) pamixer -d 1 ;;
#	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
#esac

case $BUTTON in
	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
	1) notify-send "button $BUTTON" ;;
esac

[ $(pamixer --get-mute) = true ] && echo 婢 && exit

vol="$(pamixer --get-volume)"

if [ "$vol" -gt "70" ]; then
	icon=""
elif [ "$vol" -lt "30" ]; then
	icon=""
elif [ "$vol" -eq "0" ]; then
	icon=""
else
	icon="墳"
fi

echo "$icon $vol%"
